rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read/write only for the authenticated user on their own Users/{userId} document
    match /Users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny everything else by default (add rules for other collections as needed)
  }
}